
/* DARK THEME */
$(document).ready(function(e) {
	var toggleSwitch = $('.dt-button');

	if (localStorage.theme) {
		toggleSwitch.checked = localStorage.theme === 'dark';
	}

	function switchTheme(e) {
		if (localStorage.theme === 'dark') {
			var theme = 'light';
		} else {
			var theme = 'dark';
		}
		
		document.documentElement.setAttribute('data-theme', theme);
		localStorage.theme = theme;
		console.log(localStorage.theme);
	}

	var darktheme = $('.darktheme-wrapper');
	var themeButtonCheck = localStorage.theme === 'dark' ? toggleSwitch.addClass('dtb-active') : toggleSwitch.removeClass('dtb-active');
	themeButtonCheck;

	darktheme.on('click', function(e){
		themeButtonCheck;
		toggleSwitch.toggleClass('dtb-active');
		switchTheme(e);
	});
});
